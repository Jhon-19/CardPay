<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UserText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_column">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">140dp</item>
    </style>

    <style name="UserEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_column">1</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">#BC83F1E1</item>
        <item name="android:colorControlActivated">#0900FF</item>
    </style>

    <style name="FlowText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
</resources>
